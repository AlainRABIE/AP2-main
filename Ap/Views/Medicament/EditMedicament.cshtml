@model ASPBookProject.Models.Medicament
@{
    Layout = "_Layout";
}
<h2>Modifier un Médicament</h2>

<form asp-action="Edit" asp-controller="Medicament" method="post">
    <input type="hidden" asp-for="MedicamentId" />

    <div>
        <label asp-for="Nom"></label>
        <input asp-for="Nom" />
        <span asp-validation-for="Nom"></span>
    </div>

    <div>
        <label asp-for="Allergie"></label>
        <input asp-for="Allergie" />
        <span asp-validation-for="Allergie"></span>
    </div>

    <div>
        <label asp-for="Posologie"></label>
        <input asp-for="Posologie" />
        <span asp-validation-for="Posologie"></span>
    </div>

    <button type="submit">Enregistrer</button>
</form>
