@model ASPBookProject.Models.Ordonnance

<h2>Confirmer la suppression</h2>

<p>Êtes-vous sûr de vouloir supprimer cette ordonnance ?</p>

<div>
    <h4>Ordonnance ID: @Model.OrdonnanceId</h4>
    <p>Pathologie : @Model.Patologie</p>
    <p>Médecin : @Model.Medecin.Identifiant</p>
    <p>Patient : @Model.Patient.Nom</p>
</div>

<form asp-action="DeleteConfirmedOrdonnance" method="post">
    <input type="hidden" asp-for="OrdonnanceId" />
    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
