@model IEnumerable<ASPBookProject.Models.Ordonnance>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ordonnances Médicales</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        .ordonnance {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
        }
        h2 {
            color: #333;
        }
        .form-group {
            margin-bottom: 10px;
        }
        label {
            display: block;
            font-weight: bold;
        }
        input[type="text"], input[type="number"], textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
        }
        button:hover {
            background-color: #45a049;
        }

        /* Modal Style */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Ordonnances Médicales</h1>

    @foreach (var ordonnance in Model)
    {
        <div class="ordonnance" id="ordonnance@ordonnance.OrdonnanceId">
            <h2>Ordonnance n°@ordonnance.OrdonnanceId</h2>
            <div class="form-group">
                <label>Nom du patient :</label>
                <input type="text" value="@ordonnance.Patient.Nom" disabled />
            </div>
            <div class="form-group">
                <label>Médicament :</label>
                <input type="text" value="@ordonnance.Medicaments.FirstOrDefault()?.Nom" disabled />
            </div>
            <div class="form-group">
                <label>Dosage :</label>
                <input type="text" value="500mg" disabled />
            </div>
            <div class="form-group">
                <label>Instructions :</label>
                <textarea disabled>Prendre 1 comprimé 3 fois par jour</textarea>
            </div>
            <button onclick="openModal(@ordonnance.OrdonnanceId)">Modifier l'ordonnance</button>
        </div>
    }
</div>

<!-- Modal -->
<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Modifier l'Ordonnance</h2>
        <form id="editOrdonnanceForm">
            <input type="hidden" id="ordonnanceId" />
            <div class="form-group">
                <label for="patientName">Nom du patient :</label>
                <input type="text" id="patientName" required />
            </div>
            <div class="form-group">
                <label for="medicament">Médicament :</label>
                <input type="text" id="medicament" required />
            </div>
            <div class="form-group">
                <label for="dosage">Dosage :</label>
                <input type="text" id="dosage" required />
            </div>
            <div class="form-group">
                <label for="instructions">Instructions :</label>
                <textarea id="instructions" required></textarea>
            </div>
            <button type="submit">Enregistrer les modifications</button>
        </form>
    </div>
</div>

<script>
    function openModal(id) {
        var ordonnance = @Html.Raw(Json.Serialize(Model));
        var ordonnanceData = ordonnance.find(o => o.OrdonnanceId === id);

        document.getElementById('ordonnanceId').value = ordonnanceData.OrdonnanceId;
        document.getElementById('patientName').value = ordonnanceData.Patient.Nom;
        document.getElementById('medicament').value = ordonnanceData.Medicaments[0]?.Nom;
        document.getElementById('dosage').value = '500mg'; // Remplace par le dosage correct
        document.getElementById('instructions').value = 'Prendre 1 comprimé 3 fois par jour'; // Remplace par les instructions correctes
        document.getElementById('myModal').style.display = 'block';
    }

    document.querySelector('.close').onclick = function () {
        document.getElementById('myModal').style.display = 'none';
    }
    document.getElementById('editOrdonnanceForm').onsubmit = function(event) {
        event.preventDefault();
        var ordonnanceId = document.getElementById('ordonnanceId').value;
        var patientName = document.getElementById('patientName').value;
        var medicament = document.getElementById('medicament').value;
        var dosage = document.getElementById('dosage').value;
        var instructions = document.getElementById('instructions').value;

        alert('Ordonnance mise à jour !\n' + 
              'Ordonnance n° ' + ordonnanceId + '\n' +
              'Patient : ' + patientName + '\n' +
              'Médicament : ' + medicament + '\n' +
              'Dosage : ' + dosage + '\n' +
              'Instructions : ' + instructions);

        document.getElementById('myModal').style.display = 'none';
    }
</script>

</body>
</html>
