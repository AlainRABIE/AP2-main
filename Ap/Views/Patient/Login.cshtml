@model ASPBookProject.Models.Medecin 
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <form asp-action="Login" method="post" class="border p-4 rounded bg-light shadow" style="width: 300px;">
            <h2 class="text-center mb-4">Connexion</h2>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>


            <div class="mb-3">
                <label asp-for="Identifiant" class="form-label">Identifiant</label>
                <input asp-for="Identifiant" class="form-control" placeholder="Entrez votre identifiant" required />
                <span asp-validation-for="Identifiant" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label">Mot de passe</label>
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Entrez votre mot de passe" required />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Se connecter</button>

            <div class="text-center mt-3">
                <p>Pas encore de compte? <a href="@Url.Action("Patient", "Register")">Inscrivez-vous ici</a>.</p>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>